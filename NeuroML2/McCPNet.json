{
    "McCPNet": {
        "version": "NeuroMLlite v0.2.1",
        "parameters": {
            "amp": 1.5,
            "scale": 3
        },
        "notes": "Example of simplified McCulloch-Pitts based Network",
        "cells": [
            {
                "mccp0": {
                    "lems_source_file": "McCPTest.xml"
                }
            }
        ],
        "synapses": [
            {
                "silentSyn_proj0": {
                    "lems_source_file": "McCPTest.xml"
                }
            },
            {
                "rsDL": {
                    "lems_source_file": "McCPTest.xml"
                }
            }
        ],
        "input_sources": [
            {
                "sg0": {
                    "neuroml2_source_file": "inputs.nml"
                }
            },
            {
                "sg1": {
                    "neuroml2_source_file": "inputs.nml"
                }
            }
        ],
        "regions": [
            {
                "region1": {
                    "x": 0.0,
                    "y": 0.0,
                    "z": 0.0,
                    "width": 1000.0,
                    "height": 100.0,
                    "depth": 1000.0
                }
            }
        ],
        "populations": [
            {
                "McCPpop0": {
                    "size": "1*scale",
                    "component": "mccp0",
                    "properties": {
                        "color": ".9 0.9 0",
                        "radius": 5
                    },
                    "random_layout": {
                        "region": "region1"
                    }
                }
            },
            {
                "McCPpop1": {
                    "size": "1*scale",
                    "component": "mccp0",
                    "properties": {
                        "color": ".9 0 0.9",
                        "radius": 5
                    },
                    "random_layout": {
                        "region": "region1"
                    }
                }
            }
        ],
        "projections": [
            {
                "proj0": {
                    "presynaptic": "McCPpop0",
                    "postsynaptic": "McCPpop1",
                    "synapse": "rsDL",
                    "pre_synapse": "silentSyn_proj0",
                    "type": "continuousProjection",
                    "weight": "random()",
                    "random_connectivity": {
                        "probability": 0.6
                    }
                }
            }
        ],
        "inputs": [
            {
                "stim0_McCPpop0": {
                    "input_source": "sg0",
                    "population": "McCPpop0",
                    "percentage": 60.0
                }
            },
            {
                "stim1_McCPpop0": {
                    "input_source": "sg1",
                    "population": "McCPpop0",
                    "percentage": 60.0
                }
            }
        ]
    }
}