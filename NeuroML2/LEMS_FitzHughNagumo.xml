<Lems>

<!-- Specify which component to run -->
<Target component="sim1"/>

<!-- Include core NeuroML2 ComponentType definitions -->
<Include file="Cells.xml"/>
<Include file="Networks.xml"/>
<Include file="Simulation.xml"/>

<Include file="FN_Definitions.xml"/>

<fnCell id="fn1" a="0.7" b="0.08" I="1.0" phi="0.08" V0="0.0" W0="0.0"/>

<network id="net1">
    <population id="fnPop1" component="fn1" size="1" />
</network>


<Simulation id="sim1" length="400ms" step="0.01ms" target="net1">

    <Display id="d1" title="Dynamical variable timeseries - V and W"
        timeScale="1ms" xmin="-40" xmax="440" ymin="-2.5" ymax="2.5">
        <Line id ="V" quantity="fnPop1[0]/V" scale="1"
            color="#000000" timeScale="1ms"/>
        <Line id ="W" quantity="fnPop1[0]/W" scale="1"
            color="#ff0000" timeScale="1ms"/>
    </Display>

    <OutputFile id="of0" fileName="./fhn.dat">
      <OutputColumn id="V" quantity="fnPop1[0]/V"/>
      <OutputColumn id="W" quantity="fnPop1[0]/W"/>
    </OutputFile>
    
</Simulation>

</Lems>
